<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/comp_graph"
        android:layout_width="match_parent"
        android:layout_height="250dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:text="Authentication:"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:id="@+id/auth_result"
            android:text=""/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Speed Ratio:"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:id="@+id/speed_ratio"
            android:text=""/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Distance Ratio:"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:id="@+id/distance_ratio"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/firstFragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Gesture 1"
            android:layout_marginLeft="60dp"
            />
        <Button
            android:id="@+id/secondFragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Gesture 2"
            />
        <Button
            android:id="@+id/thirdFragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Gesture 3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
    </LinearLayout>

    <Button
        android:id="@+id/record_gesture"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginLeft="140dp"
        android:text="Press and Hold to Record" />
</LinearLayout>